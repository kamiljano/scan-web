{
  "name": "scan-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "deploy": "npm run -w infra deploy && npm --prefix apps/cli run minikube:docker:deploy",
    "deploy:do": "npm run -w infra deploy && npm --prefix apps/cli run do:docker:deploy",
    "forward:argo": "kubectl -n argo port-forward deployment/argo-server 2746:2746",
    "forward:pg": "kubectl -n scanweb port-forward service/scanweb-postgres 5433:5433"
  },
  "workspaces": [
    "infra/",
    "apps/"
  ],
  "author": "Kamil Janowski <kgjanowski@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/bun": "^1.1.5",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.1.2"
  }
}
